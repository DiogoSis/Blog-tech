<h1 class="blog-title">Blog de Tecnologia</h1>
<p class="page-description" >Assuntos de blogs tech</p>

<div class="posts-list">
  <% @posts.each do |post| %>
      <% if post.description? %>
          <div class="post-item">
              <h2 class="post-title"><%= link_to post.title, post %></h2>
          </div>
      <% end %>
  <% end %>
</div>

<div class="link-wrapper">
  <%= link_to "Ver todos os posts", posts_path, class: "posts-link" %>
</div>